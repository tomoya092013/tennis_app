{
	"name": "Existing Docker Compose (Extend)",
	"dockerComposeFile": [
		"../docker-compose.yml",
		"docker-compose.yml"
	],
	"service": "web",
	"workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  
	"customizations": {
    "vscode": {
      "extensions": ["editorconfig.editorconfig", "dbaeumer.vscode-eslint", "esbenp.prettier-vscode","eamodio.gitlens","ms-vsliveshare.vsliveshare"],
      "settings": {
        "editor.defaultFormatter": null,
        "python.formatting.provider": "black",
        "editor.formatOnSave": true,
        "editor.rulers": [120],
        "eslint.nodePath": "./frontend/node_modules",
        "eslint.run": "onType",
        "eslint.options": {
          "overrideConfigFile": "./frontend/.eslintrc.json"
        },
        "[javascript]": {
          "editor.formatOnSave": true,
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[typescript]": {
          "editor.formatOnSave": true,
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[typescriptreact]": {
          "editor.formatOnSave": true,
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[python]": {
          "editor.defaultFormatter": null
        }
      }
    }
  }
}
